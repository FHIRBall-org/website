---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const members = await getCollection('members');
  return members.map((member) => ({
    params: { slug: member.id.replace(/\.md$/, '') },
    props: { member },
  }));
}

const { member } = Astro.props;
const { Content } = await member.render();
const data = member.data;
---

<BaseLayout title={data.name} description={data.description}>
  <section class="bg-white pt-10 pb-10 px-[10px]">
    <div class="max-w-[1200px] mx-auto text-[16px] leading-normal">

      <!-- Row 1: Logo + Contact Info -->
      <div class="flex flex-col md:flex-row items-start">
        <div class="w-full md:w-[30%] shrink-0">
          <div class="w-full max-w-[400px] h-[200px] flex items-center max-md:max-w-[200px] max-md:h-[150px] max-md:mb-5">
            <a href={data.website} target="_blank" rel="noopener noreferrer">
              {data.logo ? (
                <img
                  src={data.logo}
                  alt={`${data.name} logo`}
                  loading="lazy"
                  class="max-w-full max-h-full object-contain"
                />
              ) : (
                <div class="w-full h-full bg-surface flex items-center justify-center text-text-light">
                  {data.name}
                </div>
              )}
            </a>
          </div>
        </div>
        <div class="w-full md:ml-auto md:w-auto">
          <div class="flex flex-col gap-[7px]">
            {data.location && (
              <div class="flex gap-2.5">
                <div class="whitespace-nowrap">Location</div>
                <div class="font-semibold">{data.location}</div>
              </div>
            )}

            {data.phone && (
              <div class="flex gap-2.5">
                <div class="whitespace-nowrap">Phone</div>
                <a href={`tel:${data.phone.replace(/[^0-9+]/g, '')}`}>
                  <div class="font-semibold">{data.phone}</div>
                </a>
              </div>
            )}

            {data.contactName && (
              <div class="flex gap-2.5">
                <div class="whitespace-nowrap">Contact Name</div>
                <div class="font-semibold">{data.contactName}</div>
              </div>
            )}

            {data.email && (
              <div class="flex gap-2.5">
                <div class="whitespace-nowrap">Email</div>
                <a href={`mailto:${data.email}`}>
                  <div class="font-semibold">{data.email}</div>
                </a>
              </div>
            )}

            <div class="flex gap-2.5">
              <div class="whitespace-nowrap">Website</div>
              <a href={data.website} target="_blank" rel="noopener noreferrer">
                <div class="font-semibold">{data.website}</div>
              </a>
            </div>

            {(data.linkedin || data.twitter || data.facebook || data.youtube) && (
              <div class="flex gap-2.5">
                <div class="whitespace-nowrap">Social Media</div>
                <div class="flex gap-2.5 items-center">
                  {data.facebook && (
                    <a href={data.facebook} target="_blank" rel="noopener noreferrer" class="inline-block">
                      <svg class="w-5 h-5" viewBox="0 0 320 512" fill="currentColor">
                        <path d="M279.14 288l14.22-92.66h-88.91v-60.13c0-25.35 12.42-50.06 52.24-50.06h40.42V6.26S260.43 0 225.36 0c-73.22 0-121.08 44.38-121.08 124.72v70.62H22.89V288h81.39v224h100.17V288z"/>
                      </svg>
                    </a>
                  )}
                  {data.linkedin && (
                    <a href={data.linkedin} target="_blank" rel="noopener noreferrer" class="inline-block">
                      <svg class="w-5 h-5" viewBox="0 0 448 512" fill="currentColor">
                        <path d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.5 0 53.8a53.79 53.79 0 0 1 107.58 0c0 29.7-24.1 54.3-53.79 54.3zM447.9 448h-92.68V302.4c0-34.7-.7-79.2-48.29-79.2-48.29 0-55.69 37.7-55.69 76.7V448h-92.78V148.9h89.08v40.8h1.3c12.4-23.5 42.69-48.3 87.83-48.3 94 0 111.28 61.9 111.28 142.3V448z"/>
                      </svg>
                    </a>
                  )}
                  {data.twitter && (
                    <a href={data.twitter} target="_blank" rel="noopener noreferrer" class="inline-block">
                      <svg class="w-5 h-5" viewBox="0 0 512 512" fill="currentColor">
                        <path d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z"/>
                      </svg>
                    </a>
                  )}
                  {data.youtube && (
                    <a href={data.youtube} target="_blank" rel="noopener noreferrer" class="inline-block">
                      <svg class="w-5 h-5" viewBox="0 0 576 512" fill="currentColor">
                        <path d="M549.655 124.083c-6.281-23.65-24.787-42.276-48.284-48.597C458.781 64 288 64 288 64S117.22 64 74.629 75.486c-23.497 6.322-42.003 24.947-48.284 48.597-11.412 42.867-11.412 132.305-11.412 132.305s0 89.438 11.412 132.305c6.281 23.65 24.787 41.5 48.284 47.821C117.22 448 288 448 288 448s170.78 0 213.371-11.486c23.497-6.321 42.003-24.171 48.284-47.821 11.412-42.867 11.412-132.305 11.412-132.305s0-89.438-11.412-132.305zm-317.51 213.508V175.185l142.739 81.205-142.739 81.201z"/>
                      </svg>
                    </a>
                  )}
                </div>
              </div>
            )}
          </div>
        </div>
      </div>

      <!-- Row 2: Bio/Description -->
      <div class="mt-5 text-[18px] text-text leading-relaxed member-bio">
        <Content />
      </div>

      <!-- Row 2b: Certifications -->
      {data.certifications && data.certifications.length > 0 && (
        <p class="text-[18px] mt-2.5">
          <span class="font-semibold">Certifications:</span>{" "}
          {data.certifications.join(", ")}
        </p>
      )}

      <!-- Row 3: Service Areas, Services, Industries -->
      <div class="flex flex-col md:flex-row gap-4">
        <div class="w-full md:w-1/3 max-md:mb-5">
          <h3>Service Area</h3>
          {data.serviceAreas && data.serviceAreas.length > 0 ? (
            data.serviceAreas.map((area: string) => (
              <p class="font-medium mb-0 text-text">{area}</p>
            ))
          ) : (
            <p class="font-medium mb-0 text-text">Not specified</p>
          )}
        </div>
        <div class="w-full md:w-1/3 max-md:mb-5">
          <h3>Services / Products</h3>
          {data.services && data.services.length > 0 ? (
            data.services.map((service: string) => (
              <p class="font-medium mb-0 text-text">{service}</p>
            ))
          ) : (
            <p class="font-medium mb-0 text-text">Not specified</p>
          )}
        </div>
        <div class="w-full md:w-1/3 max-md:mb-5">
          <h3>Industries Served</h3>
          {data.industries && data.industries.length > 0 ? (
            data.industries.map((industry: string) => (
              <p class="font-medium mb-0 text-text">{industry}</p>
            ))
          ) : (
            <p class="font-medium mb-0 text-text">Not specified</p>
          )}
        </div>
      </div>

      <!-- Row 4: Member Articles -->
      {data.memberArticles && data.memberArticles.length > 0 && (
        <div>
          <h3>Members Articles:</h3>
          <div class="[&_a]:text-text [&_a]:font-bold [&_a:hover]:underline">
            {data.memberArticles.map((article: { title: string; url: string }) => (
              <p>
                <a href={article.url} target="_blank" rel="noopener noreferrer">
                  {article.title}
                </a>
              </p>
            ))}
          </div>
        </div>
      )}

    </div>
  </section>
</BaseLayout>
