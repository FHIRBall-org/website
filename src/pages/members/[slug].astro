---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const members = await getCollection('members');
  return members.map((member) => ({
    params: { slug: member.id.replace(/\.md$/, '') },
    props: { member },
  }));
}

const { member } = Astro.props;
const { Content } = await member.render();
const data = member.data;
---

<BaseLayout title={data.name} description={data.description}>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <!-- Header Section: Logo Left (30%), Contact Info Right (70%) -->
    <div class="bg-white border border-border rounded-lg p-8 mb-8">
      <div class="flex flex-col lg:flex-row gap-8">
        <!-- Logo Column -->
        <div class="lg:w-[30%] flex justify-center lg:justify-start">
          {data.logo ? (
            <img
              src={data.logo}
              alt={`${data.name} logo`}
              class="max-w-[200px] max-h-[200px] object-contain"
            />
          ) : (
            <div class="w-48 h-48 bg-surface rounded flex items-center justify-center text-text-light">
              Logo
            </div>
          )}
        </div>

        <!-- Contact Info Column -->
        <div class="lg:w-[70%]">
          <h1 class="text-3xl font-bold text-text mb-6">{data.name}</h1>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {data.location && (
              <div class="flex items-start gap-3">
                <span class="text-primary font-semibold min-w-[100px]">Location:</span>
                <span class="text-text">{data.location}</span>
              </div>
            )}

            {data.phone && (
              <div class="flex items-start gap-3">
                <span class="text-primary font-semibold min-w-[100px]">Phone:</span>
                <a href={`tel:${data.phone.replace(/[^0-9+]/g, '')}`} class="text-text hover:text-primary">
                  {data.phone}
                </a>
              </div>
            )}

            {data.contactName && (
              <div class="flex items-start gap-3">
                <span class="text-primary font-semibold min-w-[100px]">Contact:</span>
                <span class="text-text">{data.contactName}</span>
              </div>
            )}

            {data.email && (
              <div class="flex items-start gap-3">
                <span class="text-primary font-semibold min-w-[100px]">Email:</span>
                <a href={`mailto:${data.email}`} class="text-text hover:text-primary break-all">
                  {data.email}
                </a>
              </div>
            )}

            <div class="flex items-start gap-3">
              <span class="text-primary font-semibold min-w-[100px]">Website:</span>
              <a href={data.website} target="_blank" rel="noopener noreferrer" class="text-text hover:text-primary break-all">
                {data.website}
              </a>
            </div>
          </div>

          <!-- Social Links -->
          {(data.linkedin || data.twitter || data.facebook || data.youtube) && (
            <div class="mt-6 flex flex-wrap gap-4">
              {data.linkedin && (
                <a
                  href={data.linkedin}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-4 py-2 bg-[#0077B5] text-white rounded hover:opacity-90 transition-opacity"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                  LinkedIn
                </a>
              )}
              {data.twitter && (
                <a
                  href={data.twitter}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-4 py-2 bg-[#1DA1F2] text-white rounded hover:opacity-90 transition-opacity"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                  Twitter
                </a>
              )}
              {data.facebook && (
                <a
                  href={data.facebook}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-4 py-2 bg-[#1877F2] text-white rounded hover:opacity-90 transition-opacity"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                  Facebook
                </a>
              )}
              {data.youtube && (
                <a
                  href={data.youtube}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-4 py-2 bg-[#FF0000] text-white rounded hover:opacity-90 transition-opacity"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                  </svg>
                  YouTube
                </a>
              )}
            </div>
          )}
        </div>
      </div>
    </div>

    <!-- Bio Section -->
    <div class="bg-white border border-border rounded-lg p-8 mb-8">
      <h2 class="text-xl font-bold text-text mb-4">About {data.name}</h2>
      <div class="prose prose-lg max-w-none text-text-light">
        <Content />
      </div>
    </div>

    <!-- Three Column Section: Service Areas, Services, Industries -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <!-- Service Areas -->
      <div class="bg-white border border-border rounded-lg p-6">
        <h3 class="text-lg font-bold text-primary mb-4">Service Area</h3>
        {data.serviceAreas && data.serviceAreas.length > 0 ? (
          <ul class="space-y-2">
            {data.serviceAreas.map((area: string) => (
              <li class="flex items-start gap-2">
                <span class="text-primary mt-1">&#8226;</span>
                <span class="text-text">{area}</span>
              </li>
            ))}
          </ul>
        ) : (
          <p class="text-text-light italic">Not specified</p>
        )}
      </div>

      <!-- Services/Products -->
      <div class="bg-white border border-border rounded-lg p-6">
        <h3 class="text-lg font-bold text-primary mb-4">Services / Products</h3>
        {data.services && data.services.length > 0 ? (
          <ul class="space-y-2">
            {data.services.map((service: string) => (
              <li class="flex items-start gap-2">
                <span class="text-primary mt-1">&#8226;</span>
                <span class="text-text">{service}</span>
              </li>
            ))}
          </ul>
        ) : (
          <p class="text-text-light italic">Not specified</p>
        )}
      </div>

      <!-- Industries Served -->
      <div class="bg-white border border-border rounded-lg p-6">
        <h3 class="text-lg font-bold text-primary mb-4">Industries Served</h3>
        {data.industries && data.industries.length > 0 ? (
          <ul class="space-y-2">
            {data.industries.map((industry: string) => (
              <li class="flex items-start gap-2">
                <span class="text-primary mt-1">&#8226;</span>
                <span class="text-text">{industry}</span>
              </li>
            ))}
          </ul>
        ) : (
          <p class="text-text-light italic">Not specified</p>
        )}
      </div>
    </div>

    <!-- Back Link -->
    <div class="mt-8">
      <a href="/members" class="text-primary hover:text-primary-hover font-medium">
        &larr; Back to All Members
      </a>
    </div>
  </div>
</BaseLayout>
