---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  image?: string;
  author?: string;
}

const { title, description, pubDate, slug, image, author } = Astro.props;
---

<article class="bg-white border border-border rounded-lg overflow-hidden hover:shadow-md transition-shadow">
  {image && (
    <img
      src={image}
      alt=""
      class="w-full h-48 object-cover"
    />
  )}
  <div class="p-6">
    {author && (
      <p class="text-sm text-text-light">{author}</p>
    )}
    <h2 class="mt-2 text-xl font-semibold text-text">
      <a href={`/resources/${slug}`} class="hover:text-primary transition-colors">
        {title}
      </a>
    </h2>
    <p class="mt-2 text-text-light">{description}</p>
    <a
      href={`/resources/${slug}`}
      class="inline-block mt-4 text-sm text-primary hover:text-primary-hover font-medium"
    >
      Read more &rarr;
    </a>
  </div>
</article>
